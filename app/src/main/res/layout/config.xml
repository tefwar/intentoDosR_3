<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/confi"
    >


    <Button
        android:id="@+id/cancelar_config"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/port_config"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ipconfig"
        android:layout_alignTop="@+id/ipconfig"
        android:layout_marginTop="77dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:theme="@style/CampoTextoBlanco" />

    <EditText
        android:id="@+id/ipconfig"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="188dp"
        android:layout_marginStart="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:theme="@style/CampoTextoBlanco" />

    <Button
        android:id="@+id/aceptar_config"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancelar_config"
        android:layout_alignBottom="@+id/cancelar_config"
        android:layout_toEndOf="@+id/cancelar_config" />
</RelativeLayout>